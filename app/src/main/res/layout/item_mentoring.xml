    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mento_titleImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/myface" />

                <TextView
                    android:id="@+id/mento_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/mento_titleImg"
                    android:text="멘티구함"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/mento_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mento_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/mento_titleImg"
                    android:text="태히"
                    android:textSize="20dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:background="@drawable/work"

                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/mento_start"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:text="00;00"
                    android:gravity="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/mento_end"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:text="00;00"
                    android:gravity="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/mento_content"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="자바, c 강의오세요"
                    android:layout_marginBottom="20dp"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
