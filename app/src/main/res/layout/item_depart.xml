<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#D2E6F5"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/d_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="타이틀"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="내용~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
            android:textColor="#969292" />

        <TextView
            android:id="@+id/d_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="닉네임"
            android:textColor="#5B66A8" />

        <ImageView
            android:id="@+id/d_image"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_below="@id/d_nickname"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_mood_black_18dp"
            android:backgroundTint="#F8075C" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_nickname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/d_image"
            android:text="3"
            android:textColor="#A7A7A7" />

        <ImageView
            android:id="@+id/d_image_2"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_below="@id/d_nickname"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_mood_bad_black_18dp"
            android:backgroundTint="#034461" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_nickname"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/d_image"
            android:text="2"
            android:textColor="#A7A7A7" />

        <TextView
            android:id="@+id/d_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginRight="50dp"
            android:text="날짜"
            android:textColor="#A7A7A7" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
