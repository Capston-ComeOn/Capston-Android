<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board.free_board.FreeListDetail">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/nickname_detail"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="297dp"
        android:layout_marginRight="297dp"
        android:text="타이틀" />

    <TextView
        android:id="@+id/title_detail"
        android:layout_width="98dp"
        android:layout_height="27dp"
        android:layout_below="@+id/nickname_detail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="312dp"
        android:layout_marginRight="312dp"
        android:text="title" />

    <TextView
        android:id="@+id/content_detail"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:layout_below="@+id/title_detail"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="508dp"
        android:text="content" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14A085"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

